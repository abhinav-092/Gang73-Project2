<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.EnterPinController"
            prefWidth="300" prefHeight="400">

    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Enter Auth Pin" style="-fx-font-size: 18; -fx-font-weight: bold;" />
            
            <PasswordField fx:id="pinField" promptText="••••" editable="false" maxWidth="180"/>
            
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="CENTER" percentWidth="33"/>
                    <ColumnConstraints halignment="CENTER" percentWidth="33"/>
                    <ColumnConstraints halignment="CENTER" percentWidth="33"/>
                </columnConstraints>
                
                <rowConstraints>
                    <RowConstraints valignment="CENTER"/>
                    <RowConstraints valignment="CENTER"/>
                    <RowConstraints valignment="CENTER"/>
                    <RowConstraints valignment="CENTER"/>
                </rowConstraints>

                <!-- Row 1 -->
                <Button text="1" onAction="#handleNumber" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Button text="2" onAction="#handleNumber" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Button text="3" onAction="#handleNumber" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

                <!-- Row 2 -->
                <Button text="4" onAction="#handleNumber" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Button text="5" onAction="#handleNumber" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Button text="6" onAction="#handleNumber" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

                <!-- Row 3 -->
                <Button text="7" onAction="#handleNumber" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Button text="8" onAction="#handleNumber" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Button text="9" onAction="#handleNumber" GridPane.rowIndex="2" GridPane.columnIndex="2"/>

                <!-- Row 4 -->
                <Button text="C" onAction="#handleClear" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Button text="0" onAction="#handleNumber" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Button text="✔" onAction="#handleSubmit" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
            </GridPane>

            <Label fx:id="statusLabel" textFill="red" />
        </VBox>
    </center>
</BorderPane>
